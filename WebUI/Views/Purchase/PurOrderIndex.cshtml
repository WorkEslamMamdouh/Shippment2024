@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Purchase_Recieve;
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="row gy-3 ">
    <!-- Filter Container -->
    <div id="DivFilter" class="col-12">
        <div class="col-12">
            <div class="card bg-light-blue">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.I_Vendor</label>
                                <div class="col-9 ">
                                    <select id="ddlVendorMaster" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.App_FromDate</label>
                                <div class="col-9 ">
                                    <input type="date" class="form-control" name="GosiJoinDate" id="txtFromDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.App_ToDate</label>
                                <div class="col-9 ">
                                    <input type="date" class="form-control" name="GosiJoinDate" id="txtToDate">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.Men_AccDefSalesmen</label>
                                <div class="col-9 ">
                                    <select id="ddlSalesmanMaster" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.cash_type</label>
                                <div class="col-9 ">
                                    <select id="ddlcashType" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.App_State</label>
                                <div class="col-9 ">
                                    <select id="ddlStateType" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <!-- Search Table -->
        <div class="display_none" id="divMasterGridiv">
            <div class="card bg-light-blue">
                <div class="card-body">
                    <div class="form-group row col-lg-6 col-md-8 col-12 mb-2">
                        <label class="col-4 col-lg-2 col-md-2 align-self-center p-md-0">بحث</label>
                        <div class="col-8 col-lg-8 col-md-10">
                            <input id="txtSearchBox" name="" type="text" class="form-control" placeholder="@SystemResource.Search">
                        </div>
                    </div>
                    <!-- Table  -->
                    <table id="divMasterGrid"></table>
                </div>
            </div>
        </div>
        <!-- Details Container -->
        <div id="PurOrderDetails" class="row display_none">
            <div class="col-12 service-content">
                <div class="serviceBox">
                    <div class="row g-0">
                        <div class="col-12 col-md-4">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.Pur_TRNO   </label>
                                <div class="col-9">
                                    <input disabled type="text" class="form-control" id="txtPurTrNo">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.App_date   </label>
                                <div class="col-9">
                                    <input disabled type="date" class="form-control" id="txtDateHeader">
                                </div>
                            </div>
                        </div>


                        <div class="col-12 col-md-3">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0"> @SystemResource.Trns_RefNum   </label>
                                <div class="col-9">
                                    <input disabled type="text" class="form-control" id="txtRefNum">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-2 ">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_approved</label>
                                <div class="col-2 col-md-8">
                                    <input type="checkbox" class="checkbox" id="chkActive"  name="CUSTOM6">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.I_Vendor</label>
                                <div class="col-9 ">
                                    <select disabled class="form-control" id="ddlVendorHeader"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.Pur_PaymentType</label>
                                <div class="col-9 ">
                                    <select disabled class="form-control" id="ddlIsCash"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.Currency</label>
                                <div class="col-9 ">
                                    <select disabled class="form-control" id="ddlCurrency"></select>
                                </div>
                            </div>
                        </div>
                        <div id="checkShowPrice" class="col-12 col-md-2 ">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.Isrecieved</label>
                                <div class="col-2 col-md-8">
                                    <input type="checkbox" class="checkbox" id="chkReceived"  name="IsReceived">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.App_Salesman</label>
                                <div class="col-9 ">
                                    <select disabled class="form-control" id="ddlSalesmanHeader"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-group row g-0">
                                <label class="col-3 align-self-center p-md-0">@SystemResource.App_TaxType</label>
                                <div class="col-9 ">
                                    <select disabled class="form-control" id="ddlTaxTypeHeader"></select>
                                </div>
                            </div>
                        </div>

                        <!-- Inside Table  -->
                        <div class="inside-table my-4">
                            <div class="table-responsive">
                                <table class="table table-borderless ">
                                    <thead>
                                        <tr>
                                            <th style="width: 2%"></th>
                                            <th style="width: 15%">@SystemResource.Itm_ItemCode</th>
                                            <th style="width: 20%">@SystemResource.App_Item</th>
                                            <th style="width: 8%">@SystemResource.Pur_RequiredQty</th>
                                            <th style="width: 8%">@SystemResource.Itm_ReceivedQuntity</th>
                                            <th style="width: 8%">@SystemResource.App_Price</th>
                                            <th style="width: 8%">@SystemResource.App_total</th>
                                            <th style="width: 8%">@SystemResource.App_Tax</th>
                                            <th style="width: 10%">@SystemResource.App_TotAfterTax</th>
                                        </tr>
                                    </thead>
                                    <tbody id="div_Data"></tbody>
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th class="fw-bold fs-6">@SystemResource.App_total</th>
                                            <th><input type="text" disabled class="form-control fs-6  border-2" name="" id="txtTotal" /></th>
                                            <th><input type="text" disabled class="form-control fs-6 border-2" name="" id="txtVatTotal" /></th>
                                            <th><input type="text" disabled class="form-control fs-6 border-2" name="" id="txtNetTotal" /></th>
                                        </tr>
                                    </tfoot>
                                </table>
                                <div class="d-flex justify-content-start mr-1">
                                    <span id="btnAddDetails" class="mb-3"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                                </div>
                            </div>
                        </div>

                        <!-- Total Details -->
                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1 align-self-center p-md-0">@SystemResource.Pur_ExpirePeriod</label>
                                <div class="col-9 col-md-3">
                                    <input type="text" class="form-control" id="txtValidityPeriod" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1 align-self-center p-md-0">@SystemResource.Pur_Termsofsupply</label>
                                <div class="col-9 col-md-11">
                                    <textarea type="text" class="form-control" id="txtDliveryConditions" disabled></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1 align-self-center p-md-0">@SystemResource.Pur_Shippingterms</label>
                                <div class="col-9 col-md-11">
                                    <textarea type="text" class="form-control" id="txtShipmentConditions" disabled></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1  align-self-center p-md-0">@SystemResource.App_Notes</label>
                                <div class="col-9 col-md-11 ">
                                    <textarea type="text" class="form-control" id="txtNotes" disabled></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Editors Details -->
                        <div class="insettext row editor-details mt-2">
                            <div class="col-12 col-md-6">
                                <div class="form-group row g-0">
                                    <label class="col-4 col-md-2 align-self-center p-md-0"> @SystemResource.App_Pur</label>
                                    <div class="col-4 col-md-5 editor-input px-0">
                                        <input id="txtCreatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                    </div>
                                    <div class="col-4 col-md-5 editor-input px-0">
                                        <input id="txtCreatedAt" name="CreatedAt" type="text" disabled class="p-0">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row g-0">
                                    <label class="col-4 col-md-2 align-self-center p-md-0"> @SystemResource.App_Update</label>
                                    <div class="col-4 col-md-5 editor-input px-0">
                                        <input id="txtUpdatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                    </div>
                                    <div class="col-4 col-md-5 editor-input px-0">

                                        <input id="txtUpdatedAt" name="UpdatedAt" type="text" disabled class="p-0">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
</div>
@*<script src="~/New/vendor/jquery/jquery.min.js"></script>
    <script src="~/New/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@

@section Script{
    <script src="~/ClientApp/Purchase/PurOrder.js"></script>
    <script>
        $(document).ready(function () {
             


            $("#ddlCashBox").select2(); 
            //  $("#ddlStateType").select2();
            $("#ddlSeller").select2();
            $("#ddlCustomer").select2();
            $("#ddlCustomer2").select2();

            // Read selected option
            $('#but_read').click(function () {
                var username = $('#ddlCashBox option:selected').text();
                var userid = $('#ddlCashBox').val();
                 
                var username = $('#ddlSeller option:selected').text();
                var userid = $('#ddlSeller').val();

                var username = $('#ddlCustomer option:selected').text();
                var userid = $('#ddlCustomer').val();

                var username = $('#ddlCustomer2 option:selected').text();
                var userid = $('#ddlCustomer2').val();
                $('#result').html("id : " + userid + ", name : " + username);
            });
        });
    </script>
}

