            <div class="col-12 col-md-12" style="margin-top: -29px;">
                <div class="switch-div col-md-1" id="" style="top: 16%;">
                    <a class="btn btn-main" id="btndiv_22" href="#"> المخرجات </a>
                </div>
                <div class="table-responsive inside-table col-md-11" style="width: 89%;border: 2px solid #143f6b;border-radius: 5px;">

                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th style="width: 3%"></th>
                                <th style="width: 10%"> رقم الصنف</th>
                                <th style="width: 15%"> الوصف </th>
                                <th style="width: 10%"> الكمية</th>
