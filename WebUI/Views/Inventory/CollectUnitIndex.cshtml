                                <select class="form-control" id="Filtr_CollType"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.choose_Cat</label>
                            <div class="col-9 col-md-8 ">
                                <select id="drpPaymentType" name="" class="form-control">
                                    <option value="Null"> @SystemResource.choose_Cat  </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_Type</label>
                            <div class="col-9 col-md-8">
                                <select id="drpitem_family" name="" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_Item</label>
                            <div class="col-9 col-md-8 ">
                                <select id="txt_ID_APP_Type" name="" class="form-control" disabled>
                                    <option value="null">اختر الصنف</option>
                                </select>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <!-- Details Container -->
    <!-- Search Table -->
    <div class="display_none card bg-light-blue" id="divShow">
        <div class=" ">
            <div class="card-body">
                <!-- Table  -->
                <div class="form-group row col-lg-6 col-md-8 col-12 mb-2">
                    <label class="col-4 col-lg-2 col-md-2 align-self-center p-md-0">بحث</label>
                    <div class="col-8 col-lg-8 col-md-10">

