                    </table>


                </div>
            </div>



            @* Switch Button Div *@
            <div class="col-lg-12 mb-n3">
                <div class=" d-flex justify-content-start">
                    <div class="switch-div" id="btndiv_1">
                        <a class="btn btn-main ms-3" id="btndiv_11" href="#"> المدخلات </a>
                    </div>

                </div>
            </div>
            <!-- Show  div-1 of input -->
            <div id="div_1" class="col-lg-12">
                <div class="card bg-light-blue px-4 mb-4">

                    <!-- Inside Table  -->
                    <div class="inside-table my-4" id="divInputs">
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th style="width: 2%"></th>
                                        <th style="width: 3%"></th>
