    </script>
    <script>
        $('#btnReserveID').on('click', function () {
            $('#drpsearchReserve').toggleClass('display_none');
        });
        $('#btnCloseNo').on('click', function () {
            $('#drpCloseNo').toggleClass('display_none');
        }); $('#btnContractRentID').on('click', function () {
            $('#drpContractRent').toggleClass('display_none');
        });

    </script>
    <script src="~/ClientApp/GeneralLedger/JournalVoucher.js"></script>
}

