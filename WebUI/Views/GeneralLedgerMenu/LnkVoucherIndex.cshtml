@using Inv.WebUI.Resources
@{
    ViewBag.Title = "PaymentIndex";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>

    .showdiv {
        display: none !important;
    }

    .Grin {
        background-color: #bebebe;
        color: black;
    }
</style>
<div class="row gy-3 ">
    <!-- Filter Container -->
    <div class="col-12" id="id_div_Filter">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">

                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_BranchName</label>
                            <div class="col-9 col-md-8">
                                <select id="ddlBranch" class="form-control">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
                            <div class="col-9 col-md-8">
                                <input id="txtFromDate" name="" type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-3 col-md-2 align-self-center p-md-0">@SystemResource.App_ToDate</label>
                            <div class="col-9 col-md-10">
                                <input id="txtToDate" name="" type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">نوع الحركة</label>
                            <div class="col-9 col-md-8">
                                <select id="ddlTypeTrans" class="form-control">
                                    <option value="">أختر الحركة</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">الحاله  </label>
                            <div class="col-9 col-md-8">
                                <select id="ddlStatus" class="form-control">
                                    <option value="-1">الجميع</option>
                                    <option value="1"> تم التوليد </option>
                                    <option value="0">لم يتم التوليد</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-md-2">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.fromnum</label>
                            <div class="col-9 col-md-8 ">
                                <input id="txtFromNumber" name="" type="number" class="form-control" placeholder="من رقم">

                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-2">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.tonum</label>
                            <div class="col-9 col-md-8 ">
                                <input id="txtToNumber" name="" type="number" class="form-control " placeholder="الي رقم">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="display_none" id="divGridShow">
            <div class="card bg-light-blue">
                <div class="card-body">
                    <div class="form-group row col-lg-6 col-md-8 col-12 mb-2">
                        <label class="col-4 col-lg-2 col-md-2 align-self-center p-md-0">بحث</label>
                        <div class="col-8 col-lg-8 col-md-10">
                            <input id="txtSearch" name="" type="text" class="form-control" placeholder=" بحث :">
                        </div>
                    </div>
                    <!-- Table  -->
                    <table id="TransactionsGrid"></table>
                </div>
                <div class="d-flex justify-content-center text-blue text-center fw-bold mb-3">
                    @SystemResource.App_DoubleDisplay
                </div>
            </div>
        </div>

    </div>

    <!-- Details Container -->
    <div class="col-12">
        <!-- Search Table -->
        <!-- Restriction form  -->
        <!-- Details  -->
        <div class="row ">
            <div class="col-12 service-content card bg-light-blue display_none" id="Div_control">
                <div class="serviceBox ">
                    <div class="row g-0 ">
                        <div class="col-12" id="div_BasicData">
                            <div class="row g-0">
                                @* Details *@
                                <div class="col-12 col-md-4">
                                    <div class="form-group row">
                                        <label class="col-4 align-self-center p-md-0" style="width: 25%;"> @SystemResource.App_Number  </label>
                                        <div class="col-8">
                                            <input id="txtJouranlNumber" name="TR_NO" disabled type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4">
                                    <div class="form-group row ">
                                        <label class="col-4 align-self-center p-md-0" style="width: 25%;"> @SystemResource.App_date  </label>
                                        <div class="col-8">
                                            <input id="txtTrDate" name="TR_DATE" disabled type="date" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4">
                                    <div class="form-group row ">
                                        <label class="col-4 align-self-center p-md-0" style="width: 25%;"> @SystemResource.App_Type  </label>
                                        <div class="col-8">
                                            <input id="txtJournalType" name="TR_DESCA" disabled type="text" class="form-control">
                                            <input id="TR_CODE" name="" type="hidden" class="form-control">
                                            <input id="TRID" name="" type="hidden" class="form-control">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-12 col-md-8">
                                    <div class="form-group row">
                                        <label class="col-1 align-self-center p-md-0" style="width: 12%;">الوصف</label>
                                        <div class="col-9" style="width: 84%;">
                                            <textarea id="txtJournalDescripton" name="VOUCHER_DESCA" disabled="" type="text" class="form-control  h-100"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-md-4">
                                    <div class="form-group row ">
                                        <label class="col-4 align-self-center p-md-0" style="width: 25%;">   </label>
                                        <div class="col-8">
                                            <button id="btnGenerationVoucher" type="button" class="btn btn-main " fdprocessedid="3kjrd9" style="width: 100%;font-size: 17px;font-weight: bold;">
                                                <span class="adminpro-icon adminpro-refresh-button"></span>
                                                <i class="fa-solid fa-arrow-left fa-fade"></i>
                                                اعادة توليد القيد
                                                <i class="fa-solid fa-arrow-right fa-fade"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Inside Table  -->
                                <div class="inside-table my-4">
                                    <div class="table-responsive">
                                        <table id="IdTable" class="table table-borderless " style="width:125%">
                                            <thead>
                                                <tr>
                                                    <th width="3%"></th>
                                                    <th></th>
                                                    <th class="cursor-pointer text-right" id="divAccNumber">@SystemResource.p_account_number <i class="fas fa-arrows-alt-h"></i></th>
                                                    <th class="Acc">@SystemResource.SHT_Name</th>
                                                    <th>@SystemResource.App_Debtor</th>
                                                    <th>@SystemResource.App_Creditor</th>
                                                    <th></th>
                                                    <th class="cursor-pointer" id="divCostCnterName">@SystemResource.menu_Costcenter <i class="fas fa-arrows-alt-h"></i></th>
                                                    <th class="costcntr">@SystemResource.SHT_Name</th>
                                                    <th>@SystemResource.App_Notes</th>
                                                </tr>
                                            </thead>
                                            <tbody id="div_Data"></tbody>
                                            <tfoot>
                                                <tr>
                                                    <th width="5%"> <span id="btnAddDetails" class="mb-3 _None_Input display_none"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span></th>
                                                    <th></th>
                                                    <th class="Acc"></th>
                                                    <th>
                                                        <label class="text-blue"> @SystemResource.App_total  </label>
                                                    </th>
                                                    <th>
                                                        <div class="form-group">
                                                            <input id="txtTotalDebit" name="" disabled type="text" class="form-control" />
                                                        </div>
                                                    </th>
                                                    <th>
                                                        <div class="form-group">
                                                            <input id="txtTotalCredit" name="" disabled type="text" class="form-control" />
                                                        </div>
                                                    </th>
                                                    <th><label class="text-blue"> @SystemResource.Itm_Diff  </label></th>
                                                    <th>
                                                        <div class="form-group">
                                                            <input id="txtDifference" name="" disabled type="text" class="form-control" />
                                                        </div>
                                                    </th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="col-12 col-md-" id="divAccountNameFooter">
                                            <div class="form-group row g-0">
                                                <label class="col-2 align-self-center p-md-0"> @SystemResource.p_account_number  </label>
                                                <div class="col-10">
                                                    <input id="txtAccountNameFooter" name="" value="" disabled type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="col-12" id="divCostCntrNameFooter">
                                            <div class="form-group row g-0">
                                                <label class="col-2 align-self-center p-md-0"> @SystemResource.menu_Costcenter  </label>
                                                <div class="col-10">
                                                    <input id="txtCostCntrNameFooter" name="" value="" disabled type="text" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-12">
                                    <div class="row">
                                        <div class="col-12 col-md-" id="divAccountNameFooter">
                                            <div class="form-group row g-0">
                                                <label class="col-1 align-self-center p-md-0"> الملاحظات  </label>
                                                <div class="col-11" style="width: 89.5%;">
                                                    <input id="txtRemark" name="" value="" disabled type="text" class="form-control" />
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!-- Editors Details -->
                                @*<div class="insettext row editor-details mt-2">
                                        <div class="col-12 col-lg-6">

                                            <div class="form-group row g-0">
                                                <label class="col-4 col-xl-2 align-self-center"> @SystemResource.App_Seller</label>
                                                <div class="col-4 col-xl-4 editor-input">
                                                    <input id="txtCreatedBy" class=" " name="CREATED_BY" type="text" disabled>
                                                </div>
                                                <div class="col-4 col-xl-6 editor-input">
                                                    <input id="txtCreatedAt" class=" " name="CREATED_AT" type="text" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <div class="form-group row g-0">
                                                <label class="col-4 col-xl-2 align-self-center"> @SystemResource.App_Update</label>
                                                <div class="col-4 col-xl-4  editor-input">
                                                    <input id="txtUpdatedBy" class=" " name="UPDATED_BY" type="text" disabled>
                                                </div>
                                                <div class="col-4 col-xl-6 editor-input">

                                                    <input id="txtUpdatedAt" class=" " name="UPDATED_AT" type="text" disabled>
                                                </div>
                                            </div>
                                        </div>

                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="~/ClientApp/GeneralLedger/LnkVoucher.js"></script>
}

