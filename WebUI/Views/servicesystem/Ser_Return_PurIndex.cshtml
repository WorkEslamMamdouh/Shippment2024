@using Inv.WebUI.Resources
@{
    /**/

    ViewBag.Title = @SystemResource.Men_AccTrReceiptNote;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="row gy-3 ">
    <div class="col-12" id="DivFilter">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">
                    <input id="hd_InvoiceId" type="hidden" />
                    <input id="hd_InvoiceRetID" type="hidden" />
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
                            <div class="col-8 ">
                                <input type="date" class="form-control" name="GosiJoinDate" id="txtStartDate">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_ToDate</label>
                            <div class="col-8 ">
                                <input type="date" class="form-control" name="GosiJoinDate" id="txtEndDate">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_State</label>
                            <div class="col-8 ">
                                <select id="drpSrchStatus" name="" class="form-control"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.I_Vendor</label>
                            <div class="col-8 ">
                                <select id="drpSrchVendor" name="" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.App_Type</label>
                            <div class="col-8 ">
                                <select id="drpSrchType" name="" class="form-control"></select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Details Container -->
    <div class="col-12">
        <!-- Search Table -->
        <div class="display_none" id="divMasterGridiv">
            <div class="card bg-light-blue">
                <div class="card-body">
                    <div class="form-group row col-lg-6 col-md-8 col-12 mb-2">
                        <label class="col-4 col-lg-2 col-md-2 align-self-center p-md-0">بحث</label>
                        <div class="col-8 col-lg-8 col-md-10">
                            <input id="searchbutmemreport" name="" type="text" class="form-control" placeholder=" @SystemResource.Search ">
                        </div>
                    </div>
                    <!-- Table  -->
                    <table id="divMasterGrid"></table>
                </div>
            </div>
        </div>
        <!-- Details Container -->
        <div id="rowData" class="row">
            <div class="col-12 service-content">
                <div class="serviceBox">
                    <div class="row g-0">
                        @* Screen Button *@
                        <div class="d-flex justify-content-start">
                            <button id="btnPrintReceive" type="button" class="btn btn-main me-3 display_none">
                                @SystemResource.App_PrintReceive
                            </button>
                            <button id="btnPrintPurchaseDemand" type="button" class="btn btn-main me-3 display_none">
                                @SystemResource.App_PrintPurchaseDemand
                            </button>
                            <button id="btnPrntPrice" type="button" class="btn btn-main display_none">
                                @SystemResource.App_PrintPrice
                            </button>
                        </div>
                        <div class="col-12 display_none" id="divDetails">
                            <div class="row">
                                @* Details *@
                                <div class="col-12" id="div_Master">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.Inv_ReturnNo  </label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="number" class="form-control" name="TR_NO" id="txtTR_NO" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.Trns_RefNum</label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="number" class="form-control" name="Ref_No" id="txtRef_No" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.App_date  </label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="date" class="form-control" name="TR_DATE" id="txtTR_DATE" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-2 ">
                                                    <div class="form-group row g-0">
                                                        <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.close</label>
                                                        <div class="col-1 col-md-3">
                                                            <input type="checkbox" class="checkbox" id="chkClosed"  name="CUSTOM6">
                                                        </div>
                                                    </div>
                                                </div>
           
                                            </div>
                                        </div>
                                     
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row d-flex justify-content-center align-items-center">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.Supp_invoice_no  </label>
                                                        <div class="col-9 col-md-7">
                                                            <div class="search-content">
                                                                <input disabled type="number" class="form-control search-control" name="PurHd_DocNo" id="txtPurHd_DocNo">
                                                                <button type="button" name="Search" id="btnInvSearch" class="btn btn-main btn-search">
                                                                    <i class="fas fa-search"></i>
                                                                </button>
                                                                <input type="hidden" id="hd_InvoiceHeaderID" />
                                                                <input type="hidden" id="hd_InvoiceId" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.App_Type</label>
                                                        <div class="col-9 col-md-7">
                                                            <select class="form-control" id="drpTrType" disabled></select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.App_total  </label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="number" class="form-control" name="TOTAL" id="txtInvTotal" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-2 ">
                                                    <div class="form-group row g-0">
                                                        <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.Inv_ImportInvoice</label>
                                                        <div class="col-1 col-md-3">
                                                            <input type="checkbox" class="checkbox" id="chkImportInvoice" >
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                              

                                        <div class="col-12">
                                            <div class="row g-0">
                                                <div class="col-12 col-md-3 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.I_Vendor</label>
                                                        <div class="col-9 col-md-7">
                                                            <select id="drpVendor" name="" class="form-control" disabled></select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-3 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.Inv_MenuNo</label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="text" class="form-control " name="Pur_Tr_No" id="txtPur_Tr_No" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.App_Tax  </label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="number" class="form-control" name="Vat" id="txtVat" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12" id="divType">
                                            <div class="row g-0">
                                                <div class="col-12 col-md-6 col-lg-6">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="form-group row ">
                                                                <label class="col-3 col-md-2 align-self-center p-md-0">@SystemResource.App_Notes</label>
                                                                <div class="col-9 col-md-10 ">
                                                                    <textarea rows="4" type="text" class="form-control h-100" disabled name="Remark" id="txtRemark" value=""></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="form-group row ">
                                                                <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.Discount</label>
                                                                <div class="col-9 col-md-7 ">
                                                                    <input id="txtDISCOUNT" name="DISCOUNT" type="number" class="form-control" disabled>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-group row ">
                                                                <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.App_Net</label>
                                                                <div class="col-9 col-md-7">
                                                                    <input type="number" class="form-control input-sm" name="NetATax" id="txtNet" disabled>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="row g-0">
                                                <div class="col-12 col-md-3 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0">@SystemResource.p_account_number</label>
                                                        <div class="col-9 col-md-7 ">
                                                            <input type="text" class="form-control" name="PAY_ACC_CODE" id="txtPAY_ACC_CODE" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-3 col-lg-3">
                                                    <div class="form-group row ">
                                                        <div class="col-9 offset-3 col-md-12 offset-md-0 ">
                                                            <input type="text" class="form-control" name="PAY_ACC_CODE" id="txtPAY_ACC_Name" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-3">
                                                    <div class="form-group row ">
                                                        <label class="col-3 col-md-5 align-self-center p-md-0"> @SystemResource.App_Registration_Number  </label>
                                                        <div class="col-9 col-md-7">
                                                            <input type="text" class="form-control" name="VoucherNo" id="txtVoucherNo" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- Inside Table  -->
                            <div class="inside-table my-4" id="DivChargesShow2">
                                <div class="table-responsive">
                                    <table class="table table-borderless ">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>@SystemResource.App_serial</th>
                                                <th> @SystemResource.Inv_ServiceCode  </th>
                                                <th>@SystemResource.App_Service</th>
                                                <th>@SystemResource.App_Quantity</th>
                                                <th>@SystemResource.App_returnQty</th>
                                                <th> @SystemResource.App_Price</th>
                                                <th> @SystemResource.App_total</th>
                                                <th> @SystemResource.tax_rate</th>
                                                <th> @SystemResource.Tax_value</th>
                                                <th> @SystemResource.net</th>
                                                <th> @SystemResource.Costcenter_name</th>
                                                <th> @SystemResource.Description_Center</th>

                                            </tr>
                                        </thead>
                                        <tbody id="div_Data"></tbody>
                                    </table>
                                    <div class="d-flex justify-content-start mr-1">
                                        <span id="btnAddDetails" class="mb-3 display_none"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                                    </div>
                                </div>
                            </div>
                            <!-- Editors Details -->
                            <div class="insettext row editor-details mt-2">
                                <div class="col-12 col-md-6">
                                    <div class="form-group row g-0">
                                        <label class="col-4 col-md-2 align-self-center p-md-0"> @SystemResource.App_Create</label>
                                        <div class="col-4 col-md-5 editor-input px-0">
                                            <input id="txtCreatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                        </div>
                                        <div class="col-4 col-md-5 editor-input px-0">
                                            <input id="txtCreatedAt" name="CreatedAt" type="text" disabled class="p-0">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group row g-0">
                                        <label class="col-4 col-md-2 align-self-center p-md-0"> @SystemResource.App_Update</label>
                                        <div class="col-4 col-md-5 editor-input px-0">
                                            <input id="txtUpdatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                        </div>
                                        <div class="col-4 col-md-5 editor-input px-0">
                                            <input id="txtUpdatedAt" name="UpdatedAt" type="text" disabled class="p-0">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
         
        </div>
    </div>
</div>

@section Script{
    <script src="~/ClientApp/servicesystem/ServPurInvoiceRet.js"></script>
}